<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.ekufrin.training.controller.MenuBarController">
   <children>
      <GridPane prefHeight="600.0" prefWidth="800.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <MenuBar fx:id="menuBar" GridPane.columnSpan="2" GridPane.valignment="TOP">
              <menus>
                <Menu mnemonicParsing="false" text="Dashboard">
                  <items>
                    <MenuItem fx:id="openDashboardMenuItem" mnemonicParsing="false" text="Open dashboard" />
                  </items>
                </Menu>
                <Menu fx:id="menuUsers" mnemonicParsing="false" text="Users">
                  <items>
                    <MenuItem fx:id="showUsersMenuItem" mnemonicParsing="false" text="Show users" />
                        <MenuItem fx:id="addUserMenuItem" mnemonicParsing="false" text="Add user" />
                  </items>
                </Menu>
                <Menu fx:id="menuSessions" mnemonicParsing="false" text="Sessions">
                  <items>
                    <MenuItem fx:id="showSessionsMenuItem" mnemonicParsing="false" text="Show sessions" />
                        <MenuItem fx:id="addSessionMenuItem" mnemonicParsing="false" text="Add session" />
                  </items>
                </Menu>
                  <Menu fx:id="menuNotifications" mnemonicParsing="false" text="Notifications">
                     <items>
                        <MenuItem fx:id="showNotificationsMenuItem" mnemonicParsing="false" text="Show notifications" />
                        <MenuItem fx:id="addNotificationMenuItem" mnemonicParsing="false" text="Add notification" />
                     </items>
                  </Menu>
                  <Menu fx:id="menuFeedback" mnemonicParsing="false" text="Feedback">
                     <items>
                        <MenuItem fx:id="showFeedbackMenuItem" mnemonicParsing="false" text="Show feedback" />
                     </items>
                  </Menu>
                  <Menu fx:id="menuLogs" mnemonicParsing="false" text="Logs">
                     <items>
                        <MenuItem fx:id="showLogsMenuItem" mnemonicParsing="false" text="Show logs" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Profile">
                     <items>
                        <MenuItem fx:id="editProfileMenuItem" mnemonicParsing="false" text="Edit profile" />
                        <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" text="Logout" />
                     </items>
                  </Menu>
              </menus>
            </MenuBar>
         </children>
      </GridPane>
   </children>
</AnchorPane>
